<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin_CategoryActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/sologancategory"
        android:layout_marginTop="27dp"
        android:textAlignment="center"
        android:text="Add New Product"
        android:textStyle="bold"
        android:textSize="23sp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/sologancategory"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/categorylenearlayout"
        >


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tshirt"
            android:src="@drawable/tshirts"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sportstshirt"
            android:src="@drawable/sports"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/femaledresses"
            android:src="@drawable/female_dresses"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sweaters"
            android:src="@drawable/sweather"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/categorylenearlayout"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/categorylenearlayout2"
        >


        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/glasses"
            android:src="@drawable/glasses"
            />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:id="@+id/purses"
            android:src="@drawable/purses_bags"
            />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/Hats"
            android:src="@drawable/hats"
            />
        <ImageView
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:id="@+id/shoes"
            android:src="@drawable/shoess"
            android:layout_marginStart="16dp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/categorylenearlayout2"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/categorylenearlayout3"
        >


        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/headphones"
            android:src="@drawable/headphoness"
            />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:id="@+id/laptops"
            android:src="@drawable/laptops"
            />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/watches"
            android:src="@drawable/watches"
            />
        <ImageView
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:id="@+id/mobiles"
            android:src="@drawable/mobiles"
            android:layout_marginStart="16dp"
            />
    </LinearLayout>



</RelativeLayout>